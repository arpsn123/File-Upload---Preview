<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Success</title>
    <style>
        /* Global Styling */
        body {
            font-family: 'Georgia', serif;
            background-color: #1e1e1e;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            overflow: hidden;
            position: relative;
            color: #f8f8f8;
        }

        /* Main Container */
        .container {
            background: #2e2e2e;
            padding: 50px;
            border-radius: 12px;
            box-shadow: 0 10px 50px rgba(255, 215, 0, 0.4);
            text-align: center;
            position: relative;
            animation: fadeInUp 1s ease-in-out;
            z-index: 2;
            max-width: 500px;
            width: 90%;
        }

        /* Success Message */
        .success-text {
            font-size: 2rem;
            font-weight: 700;
            color: #ffd700;
            animation: textSlide 2s ease forwards;
            opacity: 0;
        }

        /* Upload Title */
        .file-title {
            font-size: 1.2rem;
            color: #f8f8f8;
            margin-top: 20px;
            letter-spacing: 1px;
            opacity: 0;
            animation: fadeIn 2.5s ease 1s forwards;
        }

        /* Button Styling */
        .upload-btn {
            margin-top: 30px;
            padding: 12px 25px;
            font-size: 1.1rem;
            color: #f8f8f8;
            background: linear-gradient(135deg, #ffd700, #b8860b);
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s, transform 0.3s;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
            animation: fadeInUp 1.5s ease 1.5s forwards;
            opacity: 0;
        }

        .upload-btn:hover {
            background: linear-gradient(135deg, #b8860b, #ffd700);
            transform: translateY(-3px);
        }

        /* Bouncing Balls */
        .ball {
            position: absolute;
            border-radius: 50%;
            animation: bounce 4s infinite ease-in-out;
            opacity: 0.8;
        }

        .ball1 { width: 15px; height: 15px; background-color: #ffd700; left: 20%; animation-delay: 0s; }
        .ball2 { width: 25px; height: 25px; background-color: #8b4513; left: 35%; animation-delay: 0.5s; }
        .ball3 { width: 20px; height: 20px; background-color: #c5b358; left: 50%; animation-delay: 1s; }
        .ball4 { width: 30px; height: 30px; background-color: #daa520; left: 65%; animation-delay: 1.5s; }
        .ball5 { width: 18px; height: 18px; background-color: #a0522d; left: 80%; animation-delay: 2s; }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-60px); }
        }

        /* Animations */
        @keyframes fadeInUp {
            0% { opacity: 0; transform: translateY(30px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        @keyframes fadeIn {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }

        @keyframes textSlide {
            0% { opacity: 0; transform: translateX(-100px); }
            100% { opacity: 1; transform: translateX(0); }
        }

    </style>
</head>
<body>

    <div class="container">
        <p class="success-text">Upload Successful</p>
        <p class="file-title"><%- title %></p>
        <form action="/upload" method="GET">
            <button type="submit" class="upload-btn">Upload Another File</button>
        </form>
    </div>

    <!-- Bouncing Balls -->
    <div class="ball ball1"></div>
    <div class="ball ball2"></div>
    <div class="ball ball3"></div>
    <div class="ball ball4"></div>
    <div class="ball ball5"></div>

</body>
</html>

